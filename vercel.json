{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "routes": [
    {
      "src": "/api/upload",
      "dest": "/api/upload.js"
    },
    {
      "src": "/api/files/(.*)",
      "dest": "/api/files/[filename].js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ]
} 